<!DOCTYPE html>
<html>
	<head>
		<title>Blog Spot</title>
		<%= stylesheet_link_tag    "application.css.scss", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="header_group">
			<div class="home_header" id = "inline">
				<%= link_to 'Blog Spot', root_path %>
			</div>


			<div class="account_header" id = "inline">
			<nav>
				<% if (current_user) %>
					<%= link_to 'All Users', users_path, class: "header_a_tag" %> | 
					<%= link_to 'Create Post', new_user_post_path(current_user.id), class: "header_a_tag" %> | 
					<%= link_to 'My Profile', user_path(current_user), class: "header_a_tag" %> | 
					<%= link_to 'Sign Out', destroy_user_session_path, method: :delete  %>
					

				<% else %>

						<%= link_to 'Sign In', new_user_session_path, class: "header_a_tag" %> | 
						<%= link_to 'Sign Up', new_user_registration_path, class: "header_a_tag" %>
					
				<% end %>
				</nav>
			</div>
		</div>

		<br><br><br>

		<%- flash.each do |name, msg| -%>
			<%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
		<%- end -%> 

		<div class="content">
		<% if (!current_user) %>
			<p>
				<em>
					P.S. You need to sign in/sign up in order to create a post.
				</em>
			</p>
		<% end %>
			<%= yield %>
		</div>
		
	</body>
</html>
